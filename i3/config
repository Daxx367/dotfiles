# rofi is a dmenu like utility that works a bit like spotlight on mac.
# it is configured using .Xresources
# -show-icons does what it says on the package -drun-icon-theme to use a 
# differnet theme
bindsym $mod+d exec "rofi -show drun -show-icons -theme ~/.config/rofi/dmenu.rasi"
bindsym $mod+Pause exec "~/.config/rofi/scripts/powermenu.sh"
bindsym $mod+Shift+d exec "~/.config/rofi/scripts/apps.sh"
